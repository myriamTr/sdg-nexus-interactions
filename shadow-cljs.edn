;; shadow-cljs configuration
{:source-paths
 ["src"]

 :dependencies
 [[cider/cider-nrepl  "0.21.1"]
  [cider/piggieback "0.4.1"]
  [bulma-cljs "0.1.4"]
  [io.replikativ/geheimnis "0.1.1"] ;; encryption
  [reagent "0.9.0-SNAPSHOT" :exclusions [cljsjs/react cljsjs/react-dom]]
  [re-frame "0.10.6"]
  [binaryage/devtools "0.9.10"]
  [day8.re-frame/http-fx "0.1.6"]
  [day8.re-frame/async-flow-fx "0.1.0"]
  [day8.re-frame/re-frame-10x "0.4.1"]
  [reagent-utils "0.3.3"]]

 :dev-http {8080 "public"}

 :nrepl {:port 3333}

 :builds
 {:app {:target :browser
        :output-dir "public/js"
        :asset-path "js"
        :modules {:main {:init-fn interaction.core/main}}

        :dev {:closure-defines
              {re-frame.trace.trace-enabled? true
               "re_frame.trace.trace_enabled_QMARK_" true
               day8.re_frame.tracing.trace_enabled? true}}

        :devtools {:http-root "public"
                   :http-port 8080
                   :preloads [devtools.preload
                              day8.re-frame-10x.preload]}
        :release
        {:compiler-options
         {:infer-externs :auto
          :optimizations :advanced}}}

  :data {:target :node-script
         :main data.core/main
         :output-to "output/data-main.js"}}}
